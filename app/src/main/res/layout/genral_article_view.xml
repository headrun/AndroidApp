<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:og="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <me.kaelaela.opengraphview.OpenGraphView
        android:id="@+id/genral_view"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        og:bgColor="@android:color/white"
        og:cornerRadius="0dp"
        og:descTextColor="@color/text_black"
        og:faviconPlaceHolder="@color/white_smoke"
        og:imagePlaceHolder="@color/white_smoke"
        og:imagePosition="left"
        og:separateImage="true"
        og:strokeColor="@color/white"
        og:titleColor="@color/text_black"
        og:urlTextColor="@color/base_gray" />
</LinearLayout>
